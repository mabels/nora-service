{
  "name": "node-red-google-home",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": ">=8.x <12"
  },
  "main": "build/index.js",
  "scripts": {
    "build": "tsc && npm run copyhtml",
    "schema-sync": "typescript-json-schema src/socket/types.ts SyncDevices --noExtraProps --required --strictNullChecks > schema/sync.json",
    "schema-update": "typescript-json-schema src/socket/types.ts UpdateDevices --noExtraProps --required --strictNullChecks > schema/update.json",
    "schema": "npm run schema-sync && npm run schema-update",
    "copyhtml": "cp src/http/controllers/*.html build/http/controllers/",
    "heroku-postbuild": "npm run build && npm run copyhtml && npm run schema",
    "start": "node build/index.js",
    "lint": "tslint --project .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@andrei-tatar/ts-ioc": "^1.0.3",
    "@types/node-persist": "^0.0.33",
    "ajv": "^6.7.0",
    "bcrypt": "^3.0.3",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "firebase-admin": "^8.4.0",
    "firebase-functions": "^3.3.0",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.15",
    "node-fetch": "^2.3.0",
    "node-persist": "^3.0.5",
    "pg": "^7.8.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.3.3",
    "socket.io": "^2.2.0",
    "tslib": "^1.9.3",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.1",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/lodash": "^4.14.120",
    "@types/node": "^10.12.18",
    "@types/node-fetch": "^2.1.4",
    "@types/pg": "^7.4.11",
    "@types/socket.io": "^2.1.2",
    "@types/uuid": "^3.4.4",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4",
    "typescript-json-schema": "^0.34.0"
  }
}
